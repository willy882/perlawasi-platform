# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ============================================
# DATABASE - SUPABASE
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/database
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# ============================================
# SUPABASE PUBLIC KEYS
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# ============================================
# NEXTAUTH - AUTHENTICATION
# ============================================
# For local development
NEXTAUTH_URL="http://localhost:3000"
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here-generate-random-string"

# ============================================
# MERCADO PAGO - PAYMENT GATEWAY
# ============================================
# Get these from: https://www.mercadopago.com.pe/developers/panel
# Use TEST credentials for development
MERCADOPAGO_ACCESS_TOKEN="TEST-your-access-token-here"
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY="TEST-your-public-key-here"

# ============================================
# WHATSAPP INTEGRATION
# ============================================
NEXT_PUBLIC_WHATSAPP_NUMBER="928141669"
NEXT_PUBLIC_WHATSAPP_MESSAGE="Hola, estoy interesado en los productos de Perlawasi"

# ============================================
# APPLICATION SETTINGS
# ============================================
NEXT_PUBLIC_APP_NAME="Perlawasi"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_DEFAULT_LOCALE="es"

# ============================================
# ADMIN SETTINGS
# ============================================
# Default admin email for first setup
ADMIN_EMAIL="admin@perlawasi.com"
ADMIN_PASSWORD="change-this-password"

# ============================================
# SECURITY
# ============================================
# Rate limiting (requests per minute)
RATE_LIMIT_MAX=100
# Session duration (in seconds)
SESSION_MAX_AGE=86400

# ============================================
# OPTIONAL - ANALYTICS & MONITORING
# ============================================
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
# SENTRY_DSN="your-sentry-dsn"
